@model IEnumerable<MVCAssignment.Models.Show>

@{
    ViewBag.Title = "Shows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('.table tr th').css('background-color', 'darkorange');
        $("tr:even:not(:first)").addClass("normalEvenTD"); // 从标头行下一行开始的奇数行，行数：（1，3，5...） 
        $("tr:odd").addClass("normalOddTD"); // 从标头行下一行开始的偶数行，行数：（2，4，6...） 
    });
</script>

<h2>Shows</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Show Name
        </th>
        <th>
            Price
        </th>
        <th>
            Site
        </th>
        <th>
            Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.site)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
